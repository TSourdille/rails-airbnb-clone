<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url(
<% if boat.photos? %>
  <%= cl_image_path boat.photos.first.path %>
<% elsif boat.image1.nil? == false %>
  <%= boat.image1 %>
<% else %>
  <%= "" %>
<% end %>
);">
  <div class="card-category"><%= boat.city %></div>
  <div class="card-description">
    <h2><%= boat.name %></h2>
    <p><%= boat.boat_type %></p>
  </div>
  <% if boat.user.photo? %>
    <%= image_tag boat.user.photo, class: "card-user avatar" %>
  <% elsif boat.user.facebook_picture_url.nil? == false %>
    <%= image_tag boat.user.facebook_picture_url, class: "card-user avatar" %>
  <% else %>
    <%= image_tag("blank-profile-picture.svg", class: "card-user avatar") %>
  <% end %>
  <a class="card-link" href="#" ></a>
</div>
