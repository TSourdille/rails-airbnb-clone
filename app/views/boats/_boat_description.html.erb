<div class="container">
  <div class="boat-description-all">
    <h2>Description</h2>
    <div class="boat-description">
      <%= boat.description %>
    </div>

    <h2>Boat specs</h2>
    <div class="boat-specs">
      <dl class="dl-horizontal">
      <% clean_up_string_array(boat.specs).each do |sp| %>
      <div class="col-xs-6">
        <div class="col-xs-6">
          <strong><%= sp[0] %></strong>
        </div>
        <div class="col-xs-6">
          <%= sp[1] %>
        </div>
      </div>
      <% end %>
    </dl>
    </div>

    <h2>Boat equipment</h2>
    <div class="boat-equipment">
      <% clean_up_string_array(boat.equipment).each do |equip| %>
      <div class="col-xs-4">
        <%# TODO: substitute _ and - %>
        <%= apply_booleans(equip).html_safe %>
      </div>
      <% end %>
    </div>

    <h2>Reviews</h2>
    <div class="boat-reviews">
      <%#= boat.reviews %>
    </div>
  </div>
</div>
