<div id="map" style="width: 100%; height: 400px;"></div>

<div class="container">
  <div class="boat-list">
    <h2 class="boat-header text-center">Found <%= pluralize(@boats.size, "boat") %></h2>
    <div class="row">
      <% @boats.each do |boat| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to boat_path(boat) do %>
          <%= render 'boat_cards', boat: boat %>
          <% end %>
      </div>
      <% end %>
    </div>
  </div>
  <% unless @boats.any? %>
    <div class='text-center'> <strong> Aucun bateau a proximit√©...</strong></div>
    <br>
    <div class='text-center'><%= link_to "Page d'accueil", root_path %></div>
  <% end %>
</div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {


      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
