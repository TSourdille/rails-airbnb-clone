
<div class="media">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div class="media-body">
        <div class="media-section">
          <div class="container">
            <%= render 'boat_title', boat: @boat %>
            <%= render 'boat_photos', boat: @boat %>
            <%= render 'boat_info', boat: @boat %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="media-aside">
        <div class="media-section">
          <%= render 'boat_booking', boat: @boat, booking: @booking %>
        </div>
        <div class="media-section">
          <%= render 'boat_map', boat: @boat, hash: @hash %>
        </div>
      </div>
    </div>
  </div>

</div>

<%= render 'boats/boat_owner', boat: @boat, boat: @boat %>
<%= render 'boats/boat_description', boat: @boat, boat: @boat %>
