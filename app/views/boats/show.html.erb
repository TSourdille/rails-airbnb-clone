
<div class="media">
  <div class="media-body">
    <div class="media-section">
      <div class="container">
        <%= render 'boats/boat_title', boat: @boat %>
        <%= render 'boats/boat_photos', boat: @boat %>
        <%= render 'boats/boat_info', boat: @boat %>
      </div>
    </div>
  </div>

  <div class="media-aside">
    <div class="media-section">
      <%= render 'boats/boat_booking', boat: @boat, booking: @booking %>
    </div>
    <div class="media-section">
      <%= render 'boats/boat_map', boat: @boat, hash: @hash %>
    </div>
  </div>
</div>

<%= render 'boats/boat_owner', boat: @boat %>
