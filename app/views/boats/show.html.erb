<%= render 'boats/title', boat: @boat %>

<div class="boat-slide-container">
  <div id="my_boat_carousel" class="carousel slide" data-ride="carousel">
    <!-- Bulles -->
    <ol class="carousel-indicators">
      <li data-target="#my_carousel" data-slide-to="0" class="active"></li>
      <li data-target="#my_carousel" data-slide-to="1"></li>
      <li data-target="#my_carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <!-- Page 1 -->
      <div class="item active">
        <div class="carousel-page-for-boats" >
          <%= image_tag(@boat.image1, class: "center-block")%>
        </div>
      </div>
      <!-- Page 2 -->
      <div class="item  ">
        <%= image_tag(@boat.image2, class: "center-block")%>
      </div>

      <!-- Page 3 -->
      <div class="item center-block ">
        <%= image_tag(@boat.image3, class: "center-block") %>
      </div>
    </div>


    <a class="left carousel-control" href="#my_carousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#my_carousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
</div>
<div class="media">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="media-body full-width">
          <div class="media-section width: 100%;">
            <div class="container">
              <%= render 'boats/info', boat: @boat %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="media-aside">
          <div class="media-section">
            <%= render 'boats/booking', boat: @boat, booking: @booking %>
          </div>
          <div class="media-section">
            <%= render 'boats/map', boat: @boat, hash: @hash %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<div class="wrapper-grey">
  <%= render 'boats/description', boat: @boat, boat: @boat %>
</div>
